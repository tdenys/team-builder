{% extends 'base.html.twig' %}

{% block title %}Personne{% endblock %}

{% block body %}
    <h1>Personne</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personne.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personne.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ personne.prenom }}</td>
            </tr>
            <tr>
                <th>Equipes</th>
                {% for equipe in personne.equipes %}
                    <td>{{ equipe.nom }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('personne_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('personne_edit', {'id': personne.id}) }}" class="btn btn-primary">edit</a>

    {{ include('personne/_delete_form.html.twig') }}
{% endblock %}
